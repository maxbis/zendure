{
  "enabled": true,
  "rules": [
    {
      "id": "rule_001",
      "name": "Discharge at 14:00 if battery >80% and 14:00 price >0.30",
      "enabled": true,
      "conditions": {
        "battery_level": { "operator": ">", "value": 80 },
        "price": { "operator": ">", "value": 0.30, "hour": 14 }
      },
      "action": -100,
      "time_range": {
        "start": "1400",
        "end": "1500"
      },
      "days_of_week": [1, 2, 3, 4, 5, 6, 7],
      "date_range": null
    },
    {
      "id": "rule_002",
      "name": "Charge at night if battery <50% and 02:00 price <0.20",
      "enabled": true,
      "conditions": {
        "battery_level": { "operator": "<", "value": 50 },
        "price": { "operator": "<", "value": 0.20, "hour": 2 }
      },
      "action": 500,
      "time_range": {
        "start": "0200",
        "end": "0600"
      },
      "days_of_week": [1, 2, 3, 4, 5, 6, 7]
    },
    {
      "id": "rule_003",
      "name": "Netzero mode on weekends during peak hours",
      "enabled": true,
      "conditions": {
        "price": { "operator": ">", "value": 0.25, "hour": 18 }
      },
      "action": "netzero",
      "time_range": {
        "start": "1800",
        "end": "2000"
      },
      "days_of_week": [6, 7]
    }
  ]
}
